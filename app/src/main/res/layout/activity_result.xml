<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/sonucText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:text="SONUC" />

    <TextView
        android:id="@+id/yuzdeSonucText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/sonucText"
        app:layout_constraintEnd_toEndOf="@id/sonucText"
        app:layout_constraintTop_toBottomOf="@id/sonucText"
        android:layout_marginTop="50dp"
        android:text="Sonuc Yuzdeniz: %10" />

    <Button
        android:id="@+id/tekrarDene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/sonucText"
        app:layout_constraintEnd_toEndOf="@id/sonucText"
        app:layout_constraintTop_toBottomOf="@id/yuzdeSonucText"
        android:layout_marginTop="300dp"
        android:text="TEKRAR DENE"
        android:backgroundTint="@color/teal_700"
        />

    <TextView
        android:id="@+id/sonucDegerTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/yuzdeSonucText"
        app:layout_constraintEnd_toEndOf="@id/yuzdeSonucText"
        app:layout_constraintTop_toBottomOf="@id/yuzdeSonucText"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:text="..." />
</androidx.constraintlayout.widget.ConstraintLayout>